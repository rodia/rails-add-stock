<div id="loginbox">            
  <%= form_for(:session, url: login_path, html: {id: 'loginform', class: 'form-vertical'}) do |f| %>
    <div class="control-group normal_text"> <h3><img src="assets/img/logo.png" alt="Logo" /></h3></div>
    <div class="control-group">
        <div class="controls">
            <div class="main_input_box">
                <span class="add-on"><i class="icon-user"></i></span><%= f.email_field :email,
                    placeholder: 'Username' %>
            </div>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <div class="main_input_box">
                <span class="add-on"><i class="icon-lock"></i></span><%= f.password_field :password,
                    placeholder: 'Password' %>
            </div>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span>Remember me on this computer</span>
            <% end %>
        </div>
    </div>
    <div class="form-actions">
        <span class="pull-left">
            <a href="#" class="flip-link btn btn-inverse" id="to-recover"><%= t 'sessions.new.btn.lost_passord' %></a></span>
        <span class="pull-right">
            <%= f.submit t('sessions.new.btn.login'), class: "btn btn-success" %>
        </span>
    </div>
  <% end %>
  <form id="recoverform" action="#" class="form-vertical">
    <p class="normal_text"><%= t 'sessions.new.msg.recover_description' %></p>

    <div class="controls">
        <div class="main_input_box">
            <span class="add-on"><i class="icon-envelope"></i></span><input type="text" placeholder="E-mail address" />
        </div>
    </div>

    <div class="form-actions">
        <span class="pull-left"><a href="#" class="flip-link btn btn-inverse" id="to-login">&laquo; Back to login</a></span>
        <span class="pull-right"><input type="submit" class="btn btn-info" value="Recover" /></span>
    </div>
  </form>
  <p><span class="pull-right">New user? <%= link_to "Sign up now!", signup_path %></span></p>
</div>
