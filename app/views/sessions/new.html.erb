<div id="loginbox">            
  <%= form_for(:session, url: login_path, html: {id: 'loginform', class: 'form-vertical'}) do |f| %>
    <div class="control-group normal_text"> <h3><img src="assets/img/logo.png" alt="Logo" /></h3></div>
    <div class="control-group">
        <div class="controls">
            <div class="main_input_box">
                <span class="add-on"><i class="icon-user"></i></span><%= f.email_field :email,
                    placeholder: t('sessions.new.text.username') %>
            </div>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <div class="main_input_box">
                <span class="add-on"><i class="icon-lock"></i></span><%= f.password_field :password,
                    placeholder: t('sessions.new.text.password') %>
            </div>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span><%= t 'sessions.new.msg.remember_label' %></span>
            <% end %>
        </div>
    </div>
    <div class="form-actions">
        <span class="pull-left">
            <a href="#" class="flip-link btn btn-inverse" id="to-recover"><%= t 'sessions.new.btn.lost_passord' %></a></span>
        <span class="pull-right">
            <%= f.submit t('sessions.new.btn.login'), class: "btn btn-success" %>
        </span>
    </div>
  <% end %>
  
  <%= render 'recover_form' %>

  <p><span class="pull-right">
    <%= link_to t('static_pages.home'), root_path %> |
    <%= link_to t('sessions.new.msg.signup'), signup_path %>
    </span>
  </p>
</div>
