<form id="recoverform" action="#" class="form-vertical">
    <p class="normal_text"><%= t 'sessions.new.msg.recover_description' %></p>

    <div class="controls">
        <div class="main_input_box">
            <span class="add-on"><i class="icon-envelope"></i></span><input type="text" placeholder="<%= t 'sessions.new.text.recover_email' %>" />
        </div>
    </div>

    <div class="form-actions">
        <span class="pull-left"><a href="#" class="flip-link btn btn-inverse" id="to-login">&laquo; <%= t 'sessions.new.btn.back_to_login' %></a></span>
        <span class="pull-right"><input type="submit" class="btn btn-info" value="<%= t 'sessions.new.btn.recover' %>" /></span>
    </div>
</form>
