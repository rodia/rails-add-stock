<%= form_for(:password_reset, url: password_resets_path, html: {class: 'form-vertical', id: 'recoverform'}) do |f| %>
    <p class="normal_text"><%= t 'sessions.new.msg.recover_description' %></p>

    <div class="controls">
        <div class="main_input_box">
            <span class="add-on"><i class="icon-envelope"></i></span><%= f.email_field :email, placeholder: t('sessions.new.text.recover_email') %>
        </div>
    </div>

    <div class="form-actions">
        <span class="pull-left"><a href="#" class="flip-link btn btn-inverse" id="to-login">&laquo; <%= t 'sessions.new.btn.back_to_login' %></a></span>
        <span class="pull-right"><%= f.submit t('sessions.new.btn.recover'), class: "btn btn-info" %></span>
    </div>
<% end %>
